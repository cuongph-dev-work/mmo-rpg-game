// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id            String      @id @default(uuid())
  username      String      @unique
  email         String?     @unique
  password_hash String
  created_at    DateTime    @default(now())
  
  characters    Character[]

  @@map("users")
}

model Character {
  id         String   @id @default(uuid())
  user_id    String
  name       String   @unique
  level      Int      @default(1)
  class_id   String
  appearance Json     @default("{}")
  map_id     Int      @default(1)
  position   Json     @default("{\"x\": 0, \"y\": 0}")
  stats      Json     @default("{\"hp\": 100, \"mp\": 50, \"str\": 10, \"agi\": 10, \"int\": 10}")
  created_at DateTime @default(now())
  
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  class      CharacterClass @relation(fields: [class_id], references: [id])

  @@index([user_id])
  @@map("characters")
}

model CharacterClass {
  id         String   @id @default(uuid())
  name        String   @unique
  description String?
  
  // Base Stats (Level 1)
  base_hp     Int
  base_mp     Int
  base_str    Int
  base_agi    Int
  base_int    Int
  
  // Stat Growth per Level
  hp_growth   Float    @default(0)
  mp_growth   Float    @default(0)
  str_growth  Float    @default(0)
  agi_growth  Float    @default(0)
  int_growth  Float    @default(0)

  characters  Character[]

  @@map("character_classes")
}
